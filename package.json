{
  "name": "animate.web",
  "version": "0.0.0-alpha.2",
  "description": "Animate.css animations ported to Web Animations API",
  "main": "src/index.js",
  "author": "Web Animate",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/webanimate/animate.web#readme",
  "unpkg": "dist/animate.web.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webanimate/animate.web.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn build:all && yarn build:split",
    "build:all": "rollup -c",
    "build:split": "rollup -c rollup.config.split.js",
    "watch": "rollup -cw",
    "fix": "yarn fix:eslint && yarn fix:prettier && yarn build",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.*\"",
    "lint:prettier": "prettier --check \"**/*.*\"",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@rollup/plugin-virtual": "^2.0.1",
    "animatable-properties": "^2.0.4",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-json": "^2.0.1",
    "jest": "^25.1.0",
    "lodash.isplainobject": "^4.0.6",
    "prettier": "^1.19.1",
    "rollup": "^2.0.2",
    "rollup-plugin-terser": "^5.2.0",
    "waapi-timing-properties": "^0.0.0-alpha.7"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "html",
      "json"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:json/recommended",
      "prettier"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(animatable-properties|waapi-timing-properties)/)"
    ]
  },
  "prettier": {
    "printWidth": 280,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "waapi",
    "web",
    "animations",
    "api",
    "web-animations-api",
    "css",
    "transitions"
  ]
}
